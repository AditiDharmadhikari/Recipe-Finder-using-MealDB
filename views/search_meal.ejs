<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Search Results</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles/style.css"/>
</head>
<body class="d-flex flex-column min-vh-100">
  <%- include("partials/header.ejs") %>
  <main class="flex-grow-1">
  <div class="container mt-4">
    <h2>Search Results for "<%= query %>"</h2>

    <% if (meals) { %>
      <% meals.forEach(meal => { %>
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= meal.strMeal %> (ID: <%= meal.idMeal %>)</h5>

            <% let hasIngredients = false; %>
            <% for(let i = 1; i <= 20; i++) {
                const ingredient = meal[`strIngredient${i}`];
                if (ingredient && ingredient.trim() !== "") {
                    hasIngredients = true;
                    break;
                }
            } %>

            <% if (hasIngredients) { %>
              <h6>Ingredients:</h6>
              <ul>
                <% for(let i = 1; i <= 20; i++) {
                    const ingredient = meal[`strIngredient${i}`];
                    const measure = meal[`strMeasure${i}`];
                    if (ingredient && ingredient.trim() !== "") { %>
                      <li><%= ingredient %> - <%= measure %></li>
                <% } } %>
              </ul>
            <% } %>


            <form action="/meal" method="POST" class="d-inline">
              <input type="hidden" name="id" value="<%= meal.idMeal %>">
              <button class="btn btn-grey">View Full Recipe</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-danger">No meals found for "<%= query %>"</p>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
  </div>
  </main>
  <%- include("partials/footer.ejs") %>
</body>
</html>
